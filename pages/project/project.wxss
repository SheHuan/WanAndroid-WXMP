/* pages/project/project.wxss */

page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.category {
  height: 60rpx;
  white-space: nowrap;
}

.category .item {
  line-height: 56rpx;
  margin: 0 24rpx;
  color: #8a8a8a;
  font-size: 28rpx;
  display: inline-block;
}

.category .active {
  color: #fe6243;
  border-bottom: 4rpx solid #fe6243;
}

.project {
  flex: 1;
}
