/* pages/login/login.wxss */

page {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 180rpx 100rpx 0;
  box-sizing: border-box;
}

input {
  width: 100%;
  height: 50rpx;
  margin-top: 60rpx;
  border-bottom: 1rpx #2c2c2c solid;
  padding-bottom: 10rpx;
  font-size: 32rpx;
}

.login {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fe6243;
  color: white;
  font-size: 32rpx;
  border-radius: 20rpx;
  margin-top: 100rpx;
  text-align: center;
}

.register {
  font-size: 28rpx;
  color: #8a8a8a;
  text-decoration: underline;
  margin-top: 30rpx;
}

.hover{
  background-color: #db553a
}
